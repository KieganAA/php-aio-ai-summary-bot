{
  "name": "alexander.k/telegram-multi-chat-bot",
  "description": "Telegram bot that daily summarizes TG chats via Deepseek",
  "type": "project",
  "require": {
    "php": ">=8.0",
    "longman/telegram-bot": "^0.83.1",
    "deepseek-php/deepseek-php-client": "^2.0",
    "vlucas/phpdotenv": "^5.0",
    "ext-pdo": "*",
    "monolog/monolog": "^3.9",
    "doctrine/dbal": "^4.3",
    "doctrine/migrations": "^3.9"
  },
  "autoload": {
    "psr-4": {
      "Src\\": "src/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0"
  },
  "scripts": {
    "test": "phpunit",
    "migrate": "php bin/migrate"
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": true
    }
  }
}
